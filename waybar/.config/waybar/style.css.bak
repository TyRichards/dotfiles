@import "../omarchy/current/theme/waybar.css";

* {
  background-color: @background;
  color: @foreground;

  border: none;
  border-radius: 0;
  min-height: 0;
  /* font-family: CaskaydiaMono Nerd Font Propo; */
  /* font-family: JetBrains Nerd Font Propo; */
  font-family: JetBrainsMono Nerd Font Propo;
  font-size: 12px;
  font-weight: bold;
}

.modules-left {
  margin-left: 8px;
}

.modules-right {
  margin-right: 8px;
}

#workspaces button {
  /* all: initial; */
  padding: 0 6px;
  margin: 0 1.5px;
  min-width: 9px;
}

#workspaces button.active {
    color: #7C2111;
    background-color: rgba(0,0,0,0.0);
}

#workspaces button.active label {
    color: #7C2111; /* More specific selector for text */
    font-weight: bold;
}

#workspaces button.urgent {
    color: #7C2111;
    background-color: rgba(0,0,0,0.0);
}

#tray,
#cpu,
#battery,
#network,
#bluetooth,
#pulseaudio,
#clock,
#custom-power-menu {
  min-width: 12px;
  margin: 0 7.5px;
}

#custom-expand-icon {
  margin-right: 12px;
}

tooltip {
  padding: 2px;
}
