# Application bindings
$terminal = uwsm app -- alacritty
$browser = uwsm app -- brave --new-window --ozone-platform=wayland
$webapp = $browser --app

bindd = ALT, return, Terminal, exec, $terminal
bindd = ALT, F, File manager, exec, uwsm app -- nautilus --new-window
bindd = ALT, B, Browser, exec, $browser
bindd = ALT SHIFT, M, Music, exec, uwsm app -- spotify
bindd = ALT, N, Neovim, exec, $terminal -e nvim
bindd = ALT, T, Activity, exec, $terminal -e btop
bindd = ALT, D, Docker, exec, $terminal -e lazydocker
bindd = ALT, G, Signal, exec, uwsm app -- signal-desktop
bindd = ALT, O, Obsidian, exec, uwsm app -- obsidian -disable-gpu
bindd = ALT, slash, Passwords, exec, uwsm app -- bitwarden-desktop

bindd = ALT SHIFT, A, ChatGPT, exec, $webapp="https://chatgpt.com"
bindd = ALT, A, Grok, exec, $webapp="https://grok.com"
bindd = ALT, C, Calendar, exec, $webapp="https://app.hey.com/calendar/weeks/"
bindd = ALT, E, Email, exec, $webapp="https://app.hey.com"
bindd = ALT, Y, YouTube, exec, $webapp="https://youtube.com/"
# bindd = ALT SHIFT, G, WhatsApp, exec, $webapp="https://web.whatsapp.com/"
bindd = ALT, G, Google Messages, exec, $webapp="https://messages.google.com/web/conversations"
bindd = ALT, X, X, exec, $webapp="https://x.com/"
bindd = ALT SHIFT, X, X Post, exec, $webapp="https://x.com/compose/post"
bindd = ALT, R, Basecamp, exec, $webapp="https://3.basecamp.com/5973641/"
bindd = ALT SHIFT, R, Ninety, exec, $webapp="https://app.ninety.io/todos/team"

# bind = SUPER, return, exec, $terminal
bindd = ALT SHIFT, F, Yazi, exec, $terminal -e yazi 
bindd = ALT, M, MOCP, exec, $terminal -e mocpi

# Switch between latest workspaces
unbind = ALT, Tab
bindd =  ALT, Tab, Switch to previous workspace, workspace, previous




# TILING DEFAULT OVERRIDES ###################################################################
# ~/.local/share/omarchy/default/hypr/bindings/tiling.conf

# Close window
unbind = SUPER, W
bindd = ALT, W, Close active window, killactive,

# Control tiling
unbind = SUPER, J
bindd = ALT, J, Toggle split, togglesplit, # dwindle
unbind = SUPER, P
bindd = ALT, P, Pseudo window, pseudo, # dwindle
unbind = SUPER, V
bindd = ALT, V, Toggle floating, togglefloating,
unbind = SHIFT, F11
bindd = ALT, F11, Force full screen, fullscreen, 0

# Move focus with SUPER + arrow keys
unbind = SUPER, left
bindd = ALT, left, Move focus left, movefocus, l
unbind = SUPER, right
bindd = ALT, right, Move focus right, movefocus, r
unbind = SUPER, up
bindd = ALT, up, Move focus up, movefocus, u
unbind = SUPER, down
bindd = ALT, down, Move focus down, movefocus, d

# Switch workspaces with SUPER + [0-9]
unbind = SUPER, code:10
bindd = ALT, code:10, Switch to workspace 1, workspace, 1
unbind = SUPER, code:11
bindd = ALT, code:11, Switch to workspace 2, workspace, 2
unbind = SUPER, code:12
bindd = ALT, code:12, Switch to workspace 3, workspace, 3
unbind = SUPER, code:13
bindd = ALT, code:13, Switch to workspace 4, workspace, 4
unbind = SUPER, code:14
bindd = ALT, code:14, Switch to workspace 5, workspace, 5
unbind = SUPER, code:15
bindd = ALT, code:15, Switch to workspace 6, workspace, 6
unbind = SUPER, code:16
bindd = ALT, code:16, Switch to workspace 7, workspace, 7
unbind = SUPER, code:17
bindd = ALT, code:17, Switch to workspace 8, workspace, 8
unbind = SUPER, code:18
bindd = ALT, code:18, Switch to workspace 9, workspace, 9
unbind = SUPER, code:19
bindd = ALT, code:19, Switch to workspace 10, workspace, 10

# Move active window to a workspace with SUPER + SHIFT + [0-9]
unbind = SUPER SHIFT, code:10
bindd = ALT SHIFT, code:10, Move window to workspace 1, movetoworkspace, 1
unbind = SUPER SHIFT, code:11
bindd = ALT SHIFT, code:11, Move window to workspace 2, movetoworkspace, 2
unbind = SUPER SHIFT, code:12
bindd = ALT SHIFT, code:12, Move window to workspace 3, movetoworkspace, 3
unbind = SUPER SHIFT, code:13
bindd = ALT SHIFT, code:13, Move window to workspace 4, movetoworkspace, 4
unbind = SUPER SHIFT, code:14
bindd = ALT SHIFT, code:14, Move window to workspace 5, movetoworkspace, 5
unbind = SUPER SHIFT, code:15
bindd = ALT SHIFT, code:15, Move window to workspace 6, movetoworkspace, 6
unbind = SUPER SHIFT, code:16
bindd = ALT SHIFT, code:16, Move window to workspace 7, movetoworkspace, 7
unbind = SUPER SHIFT, code:17
bindd = ALT SHIFT, code:17, Move window to workspace 8, movetoworkspace, 8
unbind = SUPER SHIFT, code:18
bindd = ALT SHIFT, code:18, Move window to workspace 9, movetoworkspace, 9
unbind = SUPER SHIFT, code:19
bindd = ALT SHIFT, code:19, Move window to workspace 10, movetoworkspace, 10

# Swap active window with the one next to it with SUPER + SHIFT + arrow keys
# unbind = SUPER SHIFT, left
# bindd = ALT SHIFT, left, Swap window to the left, swapwindow, l
# unbind = SUPER SHIFT, right
# bindd = ALT SHIFT, right, Swap window to the right, swapwindow, r
# unbind = SUPER SHIFT, up
# bindd = ALT SHIFT, up, Swap window up, swapwindow, u
# unbind = SUPER SHIFT, down
# bindd = ALT SHIFT, down, Swap window down, swapwindow, d

# Cycle through applications on active workspace
# unbind = ALT, Tab
# bindd = ALT, Tab, Cycle to next window, cyclenext
# unbind = ALT, Tab
# bindd = ALT, Tab, Reveal active window on top, bringactivetotop

# Resize active window
unbind = SUPER, minus
bindd = ALT, minus, Expand window left, resizeactive, -50 0
unbind = SUPER, equal
bindd = ALT, equal, Shrink window left, resizeactive, 50 0
unbind = SUPER SHIFT, minus
bindd = ALT SHIFT, minus, Shrink window up, resizeactive, 0 -50
unbind = SUPER SHIFT, equal
bindd = ALT SHIFT, equal, Expand window down, resizeactive, 0 50

# Scroll through existing workspaces with SUPER + scroll
# bindd = SUPER, mouse_down, Scroll active workspace forward, workspace, e+1
# bindd = SUPER, mouse_up, Scroll active workspace backward, workspace, e-1

# Move/resize windows with mainMod + LMB/RMB and dragging
unbind = SUPER, mouse:272
bindmd = ALT, mouse:272, Move window, movewindow
unbind = SUPER, mouse:273
bindmd = ALT, mouse:273, Resize window, resizewindow




# UTILITIES DEFAULT OVERRIDES ##################################
# ~/.local/share/omarchy/default/hypr/bindings/utilities.conf

# Menus
unbind = SUPER, SPACE
bindd = ALT, SPACE, Launch apps, exec, walker -p "Startâ€¦"
unbind = SUPER ALT, SPACE
bindd = ALT CTRL, SPACE, Run commands, exec, ~/.local/share/omarchy/bin/omarchy-menu
unbind = SUPER, ESCAPE
bindd = ALT, ESCAPE, Power menu, exec, ~/.local/share/omarchy/bin/omarchy-menu system
unbind = SUPER, K
bindd = ALT, K, Show key bindings, exec, ~/.local/share/omarchy/bin/omarchy-menu-keybindings

# Aesthetics
unbind = SUPER SHIFT, SPACE
bindd = ALT SHIFT, SPACE, Toggle top bar, exec, pkill -SIGUSR1 waybar
unbind = SUPER CTRL, SPACE
bindd = ALT CTRL SHIFT, SPACE, Next background in theme, exec, ~/.local/share/omarchy/bin/omarchy-theme-bg-next
unbind = SUPER CTRL SHIFT, SPACE
bindd = ALT SHIFT SUPER, SPACE, Pick new theme, exec, ~/.local/share/omarchy/bin/omarchy-menu theme

# Notifications
unbind = SUPER, COMMA
bindd = ALT, COMMA, Dismiss last notification, exec, makoctl dismiss
unbind = SUPER SHIFT, COMMA
bindd = ALT SHIFT, COMMA, Dismiss all notifications, exec, makoctl dismiss --all
unbind = SUPER CTRL, COMMA
bindd = ALT CTRL, COMMA, Toggle silencing notifications, exec, makoctl mode -t do-not-disturb && makoctl mode | grep -q 'do-not-disturb' && notify-send "Silenced notifications" || notify-send "Enabled notifications"

# Toggle idling
unbind = SUPER CTRL, I
bindd = ALT CTRL, I, Toggle locking on idle, exec, ~/.local/share/omarchy/bin/omarchy-toggle-idle

# Toggle nightlight
unbind = SUPER CTRL, N
bindd = ALT CTRL, N, Toggle nightlight, exec, ~/.local/share/omarchy/bin/omarchy-toggle-nightlight

